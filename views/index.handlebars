<h1>Burger Menu</h1>

<h3>Add a Burger</h3>

<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
         {{!-- 'this' must align with the key in our data from response. burger_name --}}
       <p>Burger: {{this.burger_name}}</p>
  	</li>
  {{/each}}
</ul>

<div>
  <form action="/" method="POST">
  	<textarea type="text" name="wish"></textarea>

  	<button type="submit">Submit</button>
  </form>
</div>
